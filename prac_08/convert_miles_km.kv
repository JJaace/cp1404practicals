BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            on_text: app.handle_conversion((self.text))
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'UP'
                on_press: app.handle_increment(True)
            Button:
                text: 'DOWN'
                on_press: app.handle_increment(False)
